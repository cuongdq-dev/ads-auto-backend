{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/user/tsconfig.app.json"
  },
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "ads": {
      "type": "application",
      "root": "apps/ads",
      "entryFile": "main",
      "sourceRoot": "apps/ads/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ads/tsconfig.app.json"
      }
    },

    "config": {
      "type": "library",
      "root": "common/config",
      "entryFile": "index",
      "sourceRoot": "common/config/src",
      "compilerOptions": {
        "tsConfigPath": "common/config/tsconfig.common.json"
      }
    },
    "crud": {
      "type": "library",
      "root": "common/crud",
      "entryFile": "index",
      "sourceRoot": "common/crud/src",
      "compilerOptions": {
        "tsConfigPath": "common/crud/tsconfig.common.json"
      }
    },
    "decorators": {
      "type": "library",
      "root": "common/decorators",
      "entryFile": "index",
      "sourceRoot": "common/decorators/src",
      "compilerOptions": {
        "tsConfigPath": "common/decorators/tsconfig.common.json"
      }
    },
    "entities": {
      "type": "library",
      "root": "common/entities",
      "entryFile": "index",
      "sourceRoot": "common/entities/src",
      "compilerOptions": {
        "tsConfigPath": "common/entities/tsconfig.common.json"
      }
    },
    "guard": {
      "type": "library",
      "root": "common/guard",
      "entryFile": "index",
      "sourceRoot": "common/guard/src",
      "compilerOptions": {
        "tsConfigPath": "common/guard/tsconfig.common.json"
      }
    },
    "modules": {
      "type": "library",
      "root": "common/modules",
      "entryFile": "index",
      "sourceRoot": "common/modules/src",
      "compilerOptions": {
        "tsConfigPath": "common/modules/tsconfig.common.json"
      }
    },
    "pagination": {
      "type": "library",
      "root": "common/pagination",
      "entryFile": "index",
      "sourceRoot": "common/pagination/src",
      "compilerOptions": {
        "tsConfigPath": "common/pagination/tsconfig.common.json"
      }
    },
    "pipes": {
      "type": "library",
      "root": "common/pipes",
      "entryFile": "index",
      "sourceRoot": "common/pipes/src",
      "compilerOptions": {
        "tsConfigPath": "common/pipes/tsconfig.common.json"
      }
    },
    "utils": {
      "type": "library",
      "root": "common/utils",
      "entryFile": "index",
      "sourceRoot": "common/utils/src",
      "compilerOptions": {
        "tsConfigPath": "common/utils/tsconfig.common.json"
      }
    }
  }
}
