{
  "name": "ck-ecommerce",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:auth": "nest build auth",
    "build:ads": "nest build ads",
    "format": "prettier --write \"apps/**/*.ts\" \"common/**/*.ts\"",
    "start": "nest start",
    "start:prod": "node dist/apps/$APP_NAME/main.js",
    "start:auth": "nest start --watch auth",
    "start:ads": "nest start --watch ads",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nest-series/test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:generate": "npm run typeorm -- migration:generate common/modules/src/database/migrations/migrations -d ormconfig.ts",
    "migration:run": "npm run typeorm -- -d ormconfig.ts migration:run",
    "migration:show": "npm run typeorm -- -d ormconfig.ts migration:show",
    "migration:revert": "npm run typeorm -- -d ormconfig.ts migration:revert",
    "seed": "ts-node -r tsconfig-paths/register common/seeding/sample.seed.ts"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "2.0.2",
    "@nestjs/bull": "11.0.2",
    "@nestjs/common": "10.0.0",
    "@nestjs/config": "3.2.1",
    "@nestjs/core": "10.0.0",
    "@nestjs/jwt": "10.2.0",
    "@nestjs/passport": "10.0.3",
    "@nestjs/platform-express": "10.0.0",
    "@nestjs/platform-socket.io": "10.4.15",
    "@nestjs/schedule": "4.1.2",
    "@nestjs/swagger": "7.3.1",
    "@nestjs/typeorm": "10.0.2",
    "@nestjs/websockets": "10.4.15",
    "bcryptjs": "2.4.3",
    "bull": "4.16.5",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dotenv": "16.4.7",
    "facebook-nodejs-business-sdk": "^24.0.0",
    "firebase-admin": "^13.5.0",
    "google-auth-library": "9.15.1",
    "handlebars": "^4.7.8",
    "morgan": "1.10.0",
    "nestjs-paginate": "8.6.2",
    "node-ssh": "13.2.0",
    "nodemailer": "^7.0.9",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "pg": "8.11.5",
    "rxjs": "7.8.1",
    "slugify": "1.6.6",
    "typeorm": "0.3.20",
    "xml2js": "0.6.2",
    "yaml": "2.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.0.0",
    "@nestjs/testing": "10.0.0",
    "@types/bcryptjs": "2.4.6",
    "@types/express": "4.17.17",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.11",
    "@types/node": "20.3.1",
    "@types/passport-jwt": "4.0.1",
    "@types/supertest": "6.0.0",
    "@types/xml2js": "0.4.14",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "eslint": "8.42.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.5.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/common/"
    ],
    "moduleNameMapper": {
      "@app/config/(.*)": "<rootDir>/common/config/$1",
      "@app/config": "<rootDir>/common/config",
      "@app/crud/(.*)": "<rootDir>/common/crud/$1",
      "@app/crud": "<rootDir>/common/crud",
      "@app/decorators/(.*)": "<rootDir>/common/decorators/$1",
      "@app/decorators": "<rootDir>/common/decorators",
      "@app/entities/(.*)": "<rootDir>/common/entities/$1",
      "@app/entities": "<rootDir>/common/entities",
      "@app/guard/(.*)": "<rootDir>/common/guard/$1",
      "@app/guard": "<rootDir>/common/guard",
      "@app/modules/(.*)": "<rootDir>/common/modules/$1",
      "@app/modules": "<rootDir>/common/modules",
      "@app/pagination/(.*)": "<rootDir>/common/pagination/$1",
      "@app/pagination": "<rootDir>/common/pagination",
      "@app/pipes/(.*)": "<rootDir>/common/pipes/$1",
      "@app/pipes": "<rootDir>/common/pipes",
      "@app/utils/(.*)": "<rootDir>/common/utils/src/$1",
      "@app/utils": "<rootDir>/common/utils/src"
    }
  },
  "resolutions": {
    "wrap-ansi": "7.0.0",
    "string-width": "4.1.0"
  }
}
